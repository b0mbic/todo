<h1>Categories</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th>Color Hex</th>
      <th>Number of Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td bgcolor="<%= category.color %>"></td>
        <td><%= category.color %></td>
        <td><%= category.tasks.size %></td>

        <td><%= link_to 'Detail', settings_category_path(category), :class => "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_settings_category_path(category), :class => "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', settings_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p>
<%= link_to 'New Category', new_settings_category_path, :class => "btn btn-primary btn-lg" %>
</p>
<p>
  <%= will_paginate @categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</p>
