<h2>
  <strong>Title:</strong>
  <%= @category.title %>
</h2>

<h2>
  <strong>Color:</strong>
  <%= @category.color %>
</h2>

<%= link_to 'Edit Category', edit_settings_category_path(@category), :class => "btn btn-primary btn-lg" %>
<%= link_to 'Back', settings_categories_path, :class => "btn btn-secondary btn-lg" %>



<% if @tasks_by_category.empty? %>
  <p>
    <strong>You have no tasks with this category</strong>
  </p>

<% else %>

  <p>
  <h2>Tasks with this category <b><%= @category.title %></b></h2>
  </p>

<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>Deadline at</th>
    <th>Title</th>
    <th>Is Done?</th>
    <th colspan="3"></th>
  </tr>
  </thead>

<tbody>
  <% @tasks_by_category.each do |task| %>
  <tr>
    <td><%= task.deadline_at %></td>
    <td><%= task.title %></td>
    <td><%= task.is_done %></td>
    <td><%= link_to 'Detail', task, :class => "btn btn-secondary btn-sm" %></td>
    <td><%= link_to 'Edit', edit_task_path(task), :class => "btn btn-secondary btn-sm" %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-secondary btn-sm" %></td>
  </tr>
  <% end %>
</tbody>
</table>

  <p>
    <%= will_paginate @tasks_by_category, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </p>

<% end %>




