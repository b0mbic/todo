<h1>Tags</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.title %></td>
        <td><%= tag.color %></td>
        <td><%= link_to 'Show', settings_tag_path(tag), :class => "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_settings_tag_path(tag), :class => "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', settings_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-secondary btn-sm" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_settings_tag_path, :class => "btn btn-primary btn-lg" %>
