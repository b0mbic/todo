<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th>User</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.title %></td>
        <td><%= tag.color %></td>
        <td><%= tag.user.email %></td>
        <td><%= tag.updated_at %></td>
        <td><%= link_to 'Show', settings_tag_path(tag) %></td>
        <td><%= link_to 'Edit', edit_settings_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', settings_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_settings_tag_path %>
