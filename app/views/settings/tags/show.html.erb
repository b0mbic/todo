<h2>
  <strong>Title:</strong>
  <%= @tag.title %>
</h2>

<h2 >
  <strong>Color:</strong>
  <%= @tag.color %>
</h2>


<%= link_to 'Edit Tag', edit_settings_tag_path(@tag), :class => "btn btn-primary btn-lg" %>
<%= link_to 'Back', settings_tags_path, :class => "btn btn-secondary btn-lg" %>


<% if @tasks_by_tag.empty? %>
  <p>
    <strong>You have no tasks with this tag</strong>
  </p>

<% else %>

  <p>
  <h2>Tasks with tag <b><%= @tag.title %></b></h2>
  </p>

  <table class="table">
    <thead class="thead-dark">
    <tr>
      <th>Deadline at</th>
      <th>Title</th>
      <th>Is Done?</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @tasks_by_tag.each do |task| %>
      <tr>
        <td><%= task.deadline_at %></td>
        <td><%= task.title %></td>
        <td><%= task.is_done %></td>
        <td><%= link_to 'Detail', task, :class => "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), :class => "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-secondary btn-sm" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <p>
    <%= will_paginate @tasks_by_tag, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </p>

<% end %>



