
<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :deadline_at %>
    <%= f.input :title %>
    <%= f.input :note %>
    <%= f.input :is_done %>
    <%= f.association :category, required: false, collection: current_user.categories, class: "form-control" %>
    <%= f.association :tags, as: :check_boxes, required: false, collection: current_user.tags, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
